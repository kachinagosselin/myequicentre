<div class='white-background'>
<div class='center-align'>
<h4>These listings have been flagged for investigation!</h4>
<table class="table table-condensed">
    <thead>
        <tr>
          <th></th>
          <th>Horse Name</th>
          <th>Created</th>
          <th>Expires</th>
          <th>Status</th>
          <th>Flagged?</th>                                      
          <th></th>                                      
        </tr>
        </thead>
        <tbody>
        <% Horse.where(:flagged => true).each do |horse| %>
        <tr>
        <td><a data-toggle="modal" href="#message-user" class="btn btn-mini" type="button">Message</a>
        <%= render 'message', :user => horse.user  %>
        </td>    
        <td><%= horse.name %></td>
        <td><%= horse.created_at.to_date %></td>
        <td>expires</td>
        <td><%= horse.status %></td>
        <td><%= horse.flagged %></td>
        <td><%= link_to 'Change Status', user_horse_changestatus_path(horse.user, horse), method: :change_status, class: 'btn btn-mini' %></td>
        <td><%= link_to 'Delete Listing', [horse.user, horse], method: :delete, class: 'btn btn-mini', data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
        </tbody>
</table>
</div>
</div>