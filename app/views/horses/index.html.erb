<div class='white-background'>
<div class="row-fluid">
<div class="span12">
<h1>Listing horses</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Breed</th>
    <th>Gender</th>
    <th>Age</th>
    <th>Height</th>
    <th>Text description</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <% @user = current_user %>
<% @user.horses.each do |horse| %>
  <tr>
    <td><%= horse.name %></td>
    <td><%= horse.breed %></td>
    <td><%= horse.gender %></td>
    <td><%= horse.age %></td>
    <td><%= horse.height %></td>
    <td><%= horse.text_description %></td>
    <td><%= horse.price %></td>
    <td><%= link_to 'Show', user_horse_path(@user, horse) %></td>
    <td><%= link_to 'Edit', edit_user_horse_path(@user, horse) %></td>
    <td><%= link_to 'Destroy', [horse.user, horse], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Horse', new_user_horse_path %>
<%= link_to 'Back', user_path(@user) %>

</div>