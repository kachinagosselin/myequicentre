<script>
$(".card").onclick(function(){
     window.location=$(this).find("a").attr("href"); 
     return true;
});
</script>

<div class='row'>
<% @horses.each do |horse| %>
<% if horse.sale_status == "active" && horse.user.status != "disabled" && horse.user.status != "disabled" %>
<div class='span4'>
<div class='card' style="background: no-repeat;background-size:cover;">
<%=image_tag horse.avatar.url %>
<div class='banner'>
    <div class='mainline'>
    <%= link_to horse.name, user_horse_path(User.find(horse.user_id), horse) %>
        <div class='amount'>
            <div class='dollar'>$</div>
            <div class='price'><%= number_to_currency(horse.price.round, :unit => "", :precision => 0) %></div>
        </div>
    </div>
    <div class='tagline'> 
        <p><%= horse.breed %> 
        <%= horse.gender %>,
        <%= horse.age %> yrs, 
        <%= horse.height %> hh</p>
        <% if horse.state %>
        <p>located in: <%= horse.city if horse.city %>, <%= horse.state %>
        <% end %>
        <span class='more-details'><%= link_to 'view details', user_horse_path(User.find(horse.user_id), horse) %></span>
        </p>
    </div>
</div>
</div>
</div>
<% end %>
<% end %>
<div class="search-paginate">
<%= will_paginate @horses, :renderer => BootstrapPagination::Rails %>
</div>

</div>

