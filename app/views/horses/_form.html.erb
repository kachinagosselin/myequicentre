<%= simple_form_for([@user, @horse], :html => { :multipart => true }) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :breed%>
    <%= f.input :gender, :as => :select, :collection => ["Mare","Gelding","Stallion"]%>
    <%= f.input :dob, :start_year => Time.now.utc.to_date.year-50%>
    <%= f.number_field :height, :class => "numeric decimal required", :min => 4, :max => 20, :step => 0.1  %>
    <%= f.input :text_description%>
  	<p>You have used <span id="counter"></span> characters.</p>
    <%= f.number_field :price, :class => "numeric decimal required", :min => 1, :step => 100 %>
    </br>
    <%= f.file_field :avatar, :as => :avatar%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
