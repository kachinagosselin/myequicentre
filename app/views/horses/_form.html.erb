<%= simple_form_for(@horse) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :breed %>
    <%= f.input :gender %>
    <%= f.input :age %>
    <%= f.input :height %>
    <%= f.input :text_description %>
    <%= f.input :price %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
