  </div>
    
    </div>
  
  <div class="modal-footer">
  <div class="actions">
    <a class="btn" data-dismiss="modal" href="#">Cancel</a>
    <%= f.submit "Subscribe", :class =>"btn submit-button"%>
  </div>
  </div>
<% end %>

</div>
        