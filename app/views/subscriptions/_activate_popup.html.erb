  <% end %>
  <%= f.hidden_field :user_id, :value => params[:id] %>
  <%= f.hidden_field :horse_id, :value => horse.id %>
  <%= f.hidden_field :email, :value => current_user.email %>
  
  <% customer = current_user.customer %>
