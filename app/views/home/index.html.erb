<script src="js/bootstrap.min.js"></script>
<script>
  $(document).ready(function(){
    $('.carousel').carousel({
      interval: 5000
    });
    $('.item').eq(Math.floor((Math.random() * $('.item').length))).addClass("active");
  });
</script>
