<%= simple_form_for([@user, @message]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :to_user_id %>
    <%= f.hidden_field :from_user_id, :value => @user.id %>
    <%= f.input :title %>
    <%= f.input :content %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
